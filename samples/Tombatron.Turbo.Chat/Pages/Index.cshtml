@page
@model IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome - Turbo Chat</title>
    <style>
        :root {
            --bg-dark: #1a1d21;
            --bg-main: #36393f;
            --bg-input: #40444b;
            --text-primary: #dcddde;
            --text-secondary: #8e9297;
            --accent: #5865f2;
            --accent-hover: #4752c4;
        }

        * { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .welcome-card {
            background: var(--bg-main);
            padding: 40px;
            border-radius: 8px;
            width: 420px;
            text-align: center;
        }

        .welcome-card h1 {
            margin-bottom: 8px;
            font-size: 1.75rem;
        }

        .welcome-card p {
            color: var(--text-secondary);
            margin-bottom: 32px;
        }

        .welcome-form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .welcome-input {
            padding: 14px 16px;
            background: var(--bg-input);
            border: none;
            border-radius: 4px;
            color: var(--text-primary);
            font-size: 1rem;
        }

        .welcome-input:focus {
            outline: 2px solid var(--accent);
        }

        .welcome-btn {
            padding: 14px;
            background: var(--accent);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.15s;
        }

        .welcome-btn:hover {
            background: var(--accent-hover);
        }

        .features {
            margin-top: 32px;
            text-align: left;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .features h3 {
            color: var(--text-primary);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 12px;
        }

        .features ul {
            list-style: none;
        }

        .features li {
            padding: 6px 0;
        }

        .features li::before {
            content: 'âœ“';
            color: var(--accent);
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="welcome-card">
        <h1>Turbo Chat</h1>
        <p>Real-time chat powered by Turbo Streams and SignalR</p>

        <form method="post" class="welcome-form">
            <input type="text"
                   name="username"
                   class="welcome-input"
                   placeholder="Enter your username"
                   required
                   autofocus
                   minlength="2"
                   maxlength="20" />
            <button type="submit" class="welcome-btn">Join Chat</button>
        </form>

        <div class="features">
            <h3>Features Demonstrated</h3>
            <ul>
                <li>Real-time messaging via Turbo Streams</li>
                <li>Multiple chat rooms with SignalR groups</li>
                <li>Typing indicators</li>
                <li>Message history with Turbo Frames</li>
            </ul>
        </div>
    </div>
</body>
</html>
