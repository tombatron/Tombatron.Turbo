<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turbo Chat</title>
    <!-- Hotwire Turbo -->
    <script type="module" src="https://unpkg.com/@@hotwired/turbo@8.0.4/dist/turbo.es2017-esm.js"></script>
    <!-- Hotwire Stimulus (global UMD build) -->
    <script src="https://unpkg.com/@@hotwired/stimulus@3.2.2/dist/stimulus.umd.js"></script>
    <!-- Turbo SignalR adapter -->
    <script src="/_content/Tombatron.Turbo/dist/turbo-signalr.bundled.min.js"></script>
    <!-- Application controllers -->
    <script src="/js/application.js"></script>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    @RenderBody()

    <script>
    (function() {
        function updateConnectionDot(status) {
            const dot = document.getElementById('connection-dot');
            if (dot) {
                dot.className = 'connection-dot ' + status;
            }
        }

        document.addEventListener('turbo:signalr:connected', () => updateConnectionDot('connected'));
        document.addEventListener('turbo:signalr:disconnected', () => updateConnectionDot('disconnected'));
        document.addEventListener('turbo:signalr:reconnecting', () => updateConnectionDot('connecting'));
        document.addEventListener('turbo:signalr:reconnected', () => updateConnectionDot('connected'));
    })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
