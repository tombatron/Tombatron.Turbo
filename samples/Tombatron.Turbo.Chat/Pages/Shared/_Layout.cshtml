<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Turbo Chat</title>
    <turbo-scripts mode="Importmap" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    @RenderBody()

    <script>
    (function() {
        function updateConnectionDot(status) {
            const dot = document.getElementById('connection-dot');
            if (dot) {
                dot.className = 'connection-dot ' + status;
            }
        }

        document.addEventListener('turbo:signalr:connected', () => updateConnectionDot('connected'));
        document.addEventListener('turbo:signalr:disconnected', () => updateConnectionDot('disconnected'));
        document.addEventListener('turbo:signalr:reconnecting', () => updateConnectionDot('connecting'));
        document.addEventListener('turbo:signalr:reconnected', () => updateConnectionDot('connected'));
    })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
