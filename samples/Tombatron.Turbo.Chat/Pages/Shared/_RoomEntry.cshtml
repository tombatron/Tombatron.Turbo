@model (int CurrentRoomId, Tombatron.Turbo.Chat.Data.Room Room, int UnreadCount)

<a href="/Room/@Model.Room.Id"
   class="room-item @(Model.CurrentRoomId == Model.Room.Id ? "active" : "")">
    <span class="room-name">@Model.Room.Name</span>
    <span id="unread-badge-@Model.Room.Id">
        @if (Model.UnreadCount > 0)
        {
            <span class="unread-badge">@Model.UnreadCount</span>
        }
    </span>
</a>
