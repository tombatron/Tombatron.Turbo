@page
@model RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - Turbo Chat</title>
    <style>
        :root {
            --bg-dark: #1a1d21;
            --bg-main: #36393f;
            --bg-input: #40444b;
            --text-primary: #dcddde;
            --text-secondary: #8e9297;
            --accent: #5865f2;
            --accent-hover: #4752c4;
            --danger: #ed4245;
        }

        * { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .welcome-card {
            background: var(--bg-main);
            padding: 40px;
            border-radius: 8px;
            width: 420px;
            text-align: center;
        }

        .welcome-card h1 { margin-bottom: 8px; font-size: 1.75rem; }
        .welcome-card p { color: var(--text-secondary); margin-bottom: 32px; }

        .welcome-form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .welcome-input {
            padding: 14px 16px;
            background: var(--bg-input);
            border: none;
            border-radius: 4px;
            color: var(--text-primary);
            font-size: 1rem;
        }

        .welcome-input:focus { outline: 2px solid var(--accent); }

        .welcome-btn {
            padding: 14px;
            background: var(--accent);
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.15s;
        }

        .welcome-btn:hover { background: var(--accent-hover); }

        .error-message {
            color: var(--danger);
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        .auth-link {
            display: block;
            margin-top: 24px;
            color: var(--accent);
            text-decoration: none;
            font-size: 0.9rem;
        }

        .auth-link:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="welcome-card">
        <h1>Create Account</h1>
        <p>Join Turbo Chat</p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }

        <form method="post" class="welcome-form">
            <input type="text"
                   name="username"
                   class="welcome-input"
                   placeholder="Username"
                   required
                   autofocus
                   minlength="2"
                   maxlength="20"
                   value="@Model.Username" />
            <input type="password"
                   name="password"
                   class="welcome-input"
                   placeholder="Password"
                   required
                   minlength="4" />
            <input type="password"
                   name="confirmPassword"
                   class="welcome-input"
                   placeholder="Confirm Password"
                   required
                   minlength="4" />
            <button type="submit" class="welcome-btn">Register</button>
        </form>

        <a href="/Login" class="auth-link">Already have an account? Log in</a>
    </div>
</body>
</html>
